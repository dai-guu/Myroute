<!DOCTYPE html>
<html>
  <head>
    <title>Myroute</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class = "d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-light">
        <div class="container">

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">

            <span class="navbar-toggler-icon"></span>
          </button>
          <a class="navbar-brand navbar-dark p-3" href="/">myroute</a>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if logged_in? %>
            <li class="nav-item">
              <%= link_to "ログアウト", logout_path, method: :delete, class: 'nav-link text-dark' %>
            </li>

            <li class="nav-item">
              <%= link_to 'マイページ', user_path(current_user.id), class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "投稿フォーム", new_post_image_path, class: 'nav-link text-dark' %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to "新規登録", new_user_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", login_path, class: 'nav-link text-dark' %>
            </li>

            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>


    <%= notice %>
    <%= alert %>
    <div class="container">
      <%= yield %>

      <footer>
       <div class="container mt-5">
  	     <div class="row">
    	     <div class="mx-auto">
    		     <p>©myroute</p>
    	     </div>
        </div>
       </div>
     </footer>
    </div> <!--br:19 container-->
  </body>
</html>
