<div class = "container">
<h1>Mypage</h1>
<% if logged_in? %>
  <%= link_to '投稿一覧', post_images_path %>
<% else %>
  <%= render 'Login' %>
<% end %>
<p>You are logged in as "<strong><%= current_user.email %></strong>".</p>


<div>
  <h3><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", style: "border-radius:50%" %>
</div>

  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>

  <%= render "post_images/lists" %>


 <%= paginate @post_images %>
</div>