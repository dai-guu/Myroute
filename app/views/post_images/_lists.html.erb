<div class="card-list-container py-5">
  <h1 class="text-center">Lists</h1>
  <% @post_images.each do |post_image| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_image_path(post_image.id) do %>
      <%= attachment_image_tag post_image, :image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
          <div class="col-2">
            <%= attachment_image_tag post_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
          </div>

            <span><i class="fas fa-user"></i> <%= post_image.user.name %></span>

        <div class="col-5">
          <p class="card-title">
            <%= link_to(post_image_path(post_image.id), class:"text-dark") do %>
              <strong><i class="fas fa-store"></i><span> <%= post_image.shop_name %></span></strong>
            <% end %>
          </p>
          <p class="card-text"><i class="far fa-comment"></i> <%= post_image.caption %></p>

          </div>
         </div>
       </div>
     </div>
   <% end %>
 </div>