<div class="container">
  <div class="row">
    <div class="col">
      <h1>編集画面</h1>
        <%= form_with model: @post_image, local: true do |f| %>
      <h4>画像</h4>
        <%= f.attachment_field :image %>
      <h4>タイトル</h4>
        <%= f.text_field :shop_name %>
      <h4>説明</h4>
        <p><%= f.text_field :caption %></p>
      <h4>住所</h4>
        <p><%= f.text_field :address %><p>
        <p><%= f.submit '保存' %></p>
     <% end %>
    </div>
  </div>
</div>